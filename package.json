{
  "name": "conversational-article-explainer",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "next": "^16.1.1",
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @conversational-article-explainer/db db:push",
    "db:studio": "turbo -F @conversational-article-explainer/db db:studio",
    "db:generate": "turbo -F @conversational-article-explainer/db db:generate",
    "db:migrate": "turbo -F @conversational-article-explainer/db db:migrate",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@conversational-article-explainer/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@conversational-article-explainer/config": "workspace:*",
    "@types/node": "^22.13.14",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
